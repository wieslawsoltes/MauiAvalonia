<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAvalonia.SampleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAvalonia.SampleApp"
    Title="MauiAvalonia.SampleApp">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Overview"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:TabsOverviewPage}" />

        <ShellContent
            Title="Tasks"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:TabsTasksPage}" />

        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate local:TabsNotesPage}" />
    </TabBar>

</Shell>
